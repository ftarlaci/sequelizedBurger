<div class ="text-center">
	<img id="burgerPicture" src="/assets/images/burger.jpg">
</div>


<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-4">
			<h1 class="text-center">Burgers</h1>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							{{this.burger_name}}
							<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
								<button type="submit">Devour it!</button>
							</form>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-xs-12 col-md-4">
			<h1 class="text-center">Add a Burger</h1>
			<form class="create-update-form" action="burgers/create" method="POST">

				<div class="form-group">
					<label for="ca">Burger Name:</label>
					<input type="text" id="ca" name="name">
				</div>

				<button type="submit">Add A Burger</button>
			</form>
		</div>


		
		<div class="col-xs-12 col-md-4">
			<h1 class="text-center">Devoured Burgers</h1>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
					<li>
						{{this.burger_name}}
					</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>


